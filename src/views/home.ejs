<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@2.51.3/dist/full.css"
      rel="stylesheet"
      type="text/css"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Home Page</title>
  </head>
  <body>
    <main class="max-w-[1200px] mx-auto mb-10 p-5">
      <div class="navbar bg-[#fafafa] rounded-xl mb-5">
        <div class="flex-1">
          <a class="btn btn-ghost normal-case text-xl">Express</a>
        </div>
        <div class="flex-none gap-2">
          <div class="form-control">
            <input type="text" placeholder="Search" class="input input-bordered" />
          </div>
          <div class="dropdown dropdown-end">
            <label tabindex="0" class="btn btn-ghost btn-circle avatar">
              <div class="w-10 rounded-full">
                <img
                  src="https://images.unsplash.com/photo-1678737174409-bfd79e7b7d6f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
                />
              </div>
            </label>
            <ul
              tabindex="0"
              class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52"
            >
              <li>
                <a class="justify-between">
                  Profile
                  <span class="badge">New</span>
                </a>
              </li>
              <li><a>Settings</a></li>
              <li><a>Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
      <h1 class="text-center text-3xl font-semibold">Hello Express <%=name%></h1>
      <div class="flex gap-10 mt-10 flex-wrap xl:flex-nowrap">
        <div class="py-5 px-8 max-w-lg w-full mx-auto card bg-base-100 shadow-xl w-1/3">
          <form class="flex flex-col gap-y-5" action="/users/create-user" method="post">
            <div class="form-control w-full">
              <label class="label" for="usernameId">
                <span class="label-text">Username</span>
              </label>
              <input
                type="text"
                id="usernameId"
                placeholder="Enter your username"
                name="username"
                class="input input-primary w-full placeholder:italic"
                required
              />
            </div>
            <div class="form-control w-full">
              <label class="label" for="emailId">
                <span class="label-text">Email</span>
              </label>
              <input
                type="email"
                id="emailId"
                placeholder="Enter your email"
                name="email"
                class="input input-primary w-full placeholder:italic"
                required
              />
            </div>
            <div class="form-control w-full">
              <label class="label" for="passwordId">
                <span class="label-text">Password</span>
              </label>
              <input
                type="password"
                id="passwordId"
                placeholder="Enter your password"
                name="password"
                class="input input-primary w-full placeholder:italic"
                required
              />
            </div>

            <button class="btn btn-primary mb-10">Submit</button>
          </form>
        </div>
        </ul>
        <div class="py-5 px-8 w-full card bg-base-100 shadow-xl">
          <div class="overflow-x-auto w-full">
            <table class="table w-full">
              <!-- head -->
              <thead>
                <tr>
                  <th>
                    <label>
                      <input type="checkbox" class="checkbox" />
                    </label>
                  </th>
                  <th>username</th>
                  <th>email</th>
                  <th>other</th>
                </tr>
              </thead>
              <tbody>
                <!-- row 1 -->

                <% userList.forEach((item,idx) => { %>
                <tr>
                  <th style="text-align: center;">
                    <label>
                      <%=idx+1 %>
                    </label>
                  </th>
                  <td>
                    <div class="flex items-center space-x-3">
                      <div>
                        <div class="font-bold"><%= item.username %></div>
                        <!-- <div class="text-sm opacity-50">United States</div> -->
                      </div>
                    </div>
                  </td>
                  <td><%= item.email %></td>
                  <th>
                    <button class="btn btn-ghost btn-xs">View</button>
                    <a href="/update-user/<%=item.id%>" class="btn btn-warning btn-xs">Edit</a>
                    <a href="/delete-user/<%=item.id%>" class="btn btn-error btn-xs">Delete</a>
                  </th>
                </tr>
                <% } ) %>
              </tbody>
              <!-- foot -->
              <tfoot>
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th>Job</th>
                  <th></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
